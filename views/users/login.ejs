<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('../partials/head')%>
    
    <link rel="stylesheet" href="/static/css/login.css">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <title>Dorid Login</title>
</head>
<body>

    <header>
        <%- include('../partials/header')%>
    </header>
    
    <main class="main-login">
            <h3 class="titulo-login">Iniciar sesión</h3>

            <% if(locals.errUserLogin != ''){%>
                <p class="errorsForm"> <%= locals.errUserLogin %></p>
            <% } %> 

            <form action="/users/login" method="POST">
                <label for="usuario" class="label">Usuario </label>
                    <input class="campo-input" type="text" name="email" placeholder="Ingrese su email">
                    <p class="login-link"><a href="#">¿Olvidaste tu email?</a></p>
                <label for="usuario" class="label">Contraseña </label>
                    <input class="campo-input" type="password" name="password" placeholder="Ingrese su contraseña">
                    <p class="login-link"><a href="#">¿Olvidaste tu contraseña?</a></p>
                <label class="label">Mantener sesión </label>
                    <input class="checkbox" type="checkbox" name="mantenerLogin">
                    <p class="link-register"><a href="register">Crea tu cuenta</a></p>

 <!--               <div class="g-recaptcha" data-sitekey="your_site_key"></div>
                 <input type="submit" value="Submit"></p>-->

                <div class="botonera">
                    <button class="button-login" type="submit">Aceptar</button>

                </div>
            </form>
    </main>

    <footer>
        <%- include('../partials/footer')%>
    </footer>

    <script src="/static/js/loginValidate.js"></script>

</body>
</html>